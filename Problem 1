	cout << "Box ($250)				";
	cin >> Box;
	cout << Box * 250 << ".00" << endl;

	cout << "Sideline ($100)				";
	cin >> Sideline;
	cout << Sideline * 100 << ".00" << endl;

	
	cout << "Premium ($50)				";
	cin >> Premium;
	cout << Premium * 50 << ".00" << endl;

	
	cout << "General Admission ($25)			";
	cin >> GeneralAdmission;
	cout << GeneralAdmission * 25 << ".00" << endl;

	cout << "" << endl;
	cout << "Total Sales Amount for Game 1	" << (Box * 250 ) + (Sideline * 100) + (Premium * 50) + (GeneralAdmission * 25) << ".00" << endl;

	cout << "" << endl;
