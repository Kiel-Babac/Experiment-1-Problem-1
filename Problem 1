	cout << "" << endl;
	cout << "Game 3" << endl;
	cout << "Ticket Price Sales		"  << "Number of Tickets Sold" <<endl;
	cout << "Box ($250)				";
	cin >> Box;
	cout << Box * 250 << ".00" << endl;

	cout << "Sideline ($100)				";
	cin >> Sideline;
	cout << Sideline * 100 << ".00" << endl;

	
	cout << "Premium ($50)				";
